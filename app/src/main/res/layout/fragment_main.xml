<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:orientation="vertical"
    android:weightSum="2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:elevation="8dp"
        app:cardElevation="10dp">

        <TextView
            style="@style/Title25White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:drawablePadding="10dp"
            android:fontFamily="@font/assistant_extrabold"
            android:gravity="center"
            android:paddingHorizontal="23dp"
            android:paddingVertical="17dp"
            android:shadowColor="@color/gray_black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="ברוך הבא!"
            android:textSize="30sp" />

    </androidx.cardview.widget.CardView>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/hila_logo_landscape"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"
        android:id="@+id/hila_logo"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:paddingHorizontal="23dp"
        android:layout_marginTop="40dp"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/mainFragMedicineBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            card_view:cardElevation="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/mainFragMedicineBadge"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_red_badge"
                    android:visibility="gone" />

                <TextView
                    style="@style/Bold13Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ic_report"
                    android:drawablePadding="5dp"
                    android:text="מדדים" />

            </FrameLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mainFragQuestionnaireBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            card_view:cardElevation="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/mainFragQuestionnaireBadge"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_red_badge"
                    android:visibility="gone" />

                <TextView
                    style="@style/Bold13Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ic_questionnaire"
                    android:drawablePadding="5dp"
                    android:text="שאלונים" />

            </FrameLayout>


        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:paddingHorizontal="23dp"
        android:layout_marginTop="30dp"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/mainFragMedicCaseBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            card_view:cardElevation="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/Bold13Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ic_medical"
                    android:drawablePadding="5dp"
                    android:text="תיק רפואי" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mainFragMessageBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            card_view:cardElevation="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/Bold13Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ic_baseline_message_24"
                    android:drawablePadding="5dp"
                    android:text="הודעות" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>